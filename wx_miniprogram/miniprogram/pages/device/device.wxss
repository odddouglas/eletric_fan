/* 图表 */
/* 将图表设置为父容器my-chart宽高的百分百 */
.my-chart1 {
  width: 740rpx;
  height: 600rpx;
  background-color: #f0f0f0;
  /* 灰色背景 */
  border: 1px solid #ccc;
  /* 边框 */
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  /* 添加轻微阴影效果 */
}

.my-chart2 {
  width: 740rpx;
  height: 500rpx;
  background-color: #f0f0f0;
  /* 灰色背景 */
  border: 1px solid #ccc;
  /* 边框 */
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  /* 添加轻微阴影效果 */
}

/* echart样式 */
ec-canvas {
  width: 100%;
  height: 100%;
}

/* 外部容器，将两个部分并排 */
.outer-container {
  display: flex;
  justify-content: space-between;
  /* 保证两个容器之间有间距，并排显示 */
  width: 100%;
  /* 容器宽度占满屏幕 */
}

/* 按钮容器 */
.button-container {
  display: flex;
  justify-content: flex-start;
  /* 将按钮对齐到容器的左侧 */
  align-items: center;
  width: 50%;
  /* 按钮容器占屏幕的一半 */
  margin: 20px 0;
}

/* 自定义按钮样式 */
.custom-button {
  width: auto;
  /* 按钮根据内容自适应宽度 */
  max-width: 90%;
  padding: 10px 20px;
  font-size: 20px;
  color: #070e1b;
  background-color: #ffffff33;
  border: 2px solid #ccc;
  border-radius: 8px;
  text-align: left;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

/* 按钮点击效果 */
.custom-button:active {
  background-color: #e6e6e6;
  border-color: #999;
  box-shadow: none;
}

/* 设备信息容器 */
.device-info-container {
  display: flex;
  justify-content: flex-end;
  /* 将设备信息容器对齐到右侧 */
  align-items: center;
  width: 50%;
  /* 设备信息容器占屏幕的一半 */
  margin: 20px 0;
  padding: 10px;
  /* 内边距 */
  border: 2px solid #ccc;
  /* 边框颜色和宽度 */
  border-radius: 8px;
  /* 圆角边框 */
  background-color: #f9f9f9;
  /* 背景颜色 */
}

/* 设备项样式 */
.device_item {
  padding: 10px;
  margin: 5px 0;
  border: 1px solid #ccc;
  /* 默认边框 */
  border-radius: 8px;
  /* 圆角 */
  background-color: #f9f9f9;
  /* 背景色 */
  cursor: pointer;
  /* 鼠标悬停时显示为可点击 */
}

/* hover 样式 */
.device_item_hover {
  background-color: #e6e6e6;
  /* 悬停时背景颜色 */
  border-color: #999;
  /* 悬停时边框颜色 */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  /* 悬停时阴影效果 */
}

/* 空白容器，带灰色背景 */
.empty-container {
  height: 500px;
  /* 容器高度，根据需要调整 */
  background-color: #f0f0f0;
  /* 灰色背景 */
  margin-top: 20px;
  /* 容器顶部间距 */
}